<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivProfileLeft"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:contentDescription="@string/description_other_profile_image"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sender_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sender_message_body"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/sender_message_body"
            android:ellipsize="marquee"
            android:gravity="start"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:singleLine="false"
            android:text="@string/lorem_username"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sender_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/out_message_bg"
            android:gravity="center|center_vertical"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_message"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1.00"
        android:visibility="gone">

        <com.jaysyko.wrestlechat.textview.AutoResizeTextView
            android:id="@+id/my_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/in_message_bg"
            android:gravity="center|start" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivProfileRight"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:contentDescription="@string/description_my_profile_image"
        android:visibility="invisible" />


</LinearLayout>