<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivProfileLeft"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:contentDescription="@string/description_other_profile_image"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/my_message"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1.00"
        android:visibility="gone">

        <TextView
            android:id="@+id/my_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/in_message_bg"
            android:gravity="center|center_vertical"
            android:text="@string/app_name"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sender_message"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1.00">

        <TextView
            android:id="@+id/sender_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/out_message_bg"
            android:gravity="center|center_vertical"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sender_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sender_message_body"
            android:layout_alignRight="@+id/sender_message_body"
            android:layout_below="@+id/sender_message_body"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="end"
            android:text="@string/lorem_username"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivProfileRight"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:contentDescription="@string/description_my_profile_image"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>