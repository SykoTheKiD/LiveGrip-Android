<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaysyko.wrestlechat.activities.UserProfileActivity">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username_label"
        android:layout_alignEnd="@+id/usernameChange"
        android:layout_alignLeft="@+id/usernameChange"
        android:layout_alignRight="@+id/usernameChange"
        android:layout_alignStart="@+id/usernameChange"
        android:layout_below="@+id/clickToChangePicture"
        android:contentDescription="@string/app_name"
        android:paddingTop="20dp"
        android:src="@drawable/ic_lock_outline_black_18dp" />

    <TextView
        android:id="@+id/username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/usernameChange"
        android:layout_alignLeft="@+id/usernameChange"
        android:layout_alignStart="@+id/usernameChange"
        android:paddingTop="10dp"
        android:text="@string/username_placeholder" />

    <EditText
        android:id="@+id/usernameChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newPassword"
        android:layout_alignEnd="@+id/newPassword"
        android:layout_alignLeft="@+id/newPassword"
        android:layout_alignRight="@+id/newPassword"
        android:layout_alignStart="@+id/newPassword"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="@string/new_password_title"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/updateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="@string/save" />

    <TextView
        android:id="@+id/clickToChangePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/tap_image_set_new" />

    <include layout="@layout/activity_advertisement" />
</RelativeLayout>
