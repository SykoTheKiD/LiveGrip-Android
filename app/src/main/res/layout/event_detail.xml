<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_detail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:textSize="25sp"
        android:layout_above="@+id/additional_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/additional_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@+id/ratingBar"
        android:layout_toStartOf="@+id/ratingBar" />

    <RatingBar
        style="@style/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:progressBackgroundTint="@color/cardview_dark_background"
        android:progressTint="@color/gold"
        android:secondaryProgressTint="@color/gold"
        android:id="@+id/ratingBar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/event_detail"
        android:layout_toEndOf="@+id/event_detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#eeeeee"
        android:text="Popularity"
        android:layout_below="@+id/event_detail"
        android:layout_toRightOf="@+id/event_detail"
        android:layout_toEndOf="@+id/event_detail" />
</RelativeLayout>