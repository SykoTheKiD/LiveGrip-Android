<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:src="@drawable/login_screen_bg"
            android:tint="@color/black"
            android:tintMode="multiply" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/myImageView"
            android:layout_alignLeft="@+id/myImageView"
            android:layout_alignRight="@+id/myImageView"
            android:layout_alignTop="@+id/myImageView"
            android:layout_margin="1dp"
            android:gravity="bottom|left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="AT&amp;T Stadium | Dallas, Texas"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/myImageViewText1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/myImageViewText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="33dp"
            android:gravity="bottom|left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="Wrestlemania 32"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/myImageView"
            android:background="#e63946" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="86dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/right_nav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|right"
                android:background="@null"
                android:src="@drawable/chevron_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/frameLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="For the WWE Championship"
                android:textColor="#ebebeb"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/left_nav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignTop="@+id/textView2"
                android:layout_gravity="left"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                android:background="@null"
                android:src="@drawable/chevron_icon_left" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frameLayout"
            android:layout_centerHorizontal="true"
            android:text="Dean Ambrose vs. Seth Rollins"
            android:textColor="#ebebeb"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
