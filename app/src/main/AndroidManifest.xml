<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaysyko.wrestlechat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".application.Initializer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Activity Declarations -->
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MessagingActivity"
            android:label="@string/activity_messaging"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.EventInfoActivity"
            android:label="@string/activity_event_info"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/activity_settings" />
        <activity
            android:name=".activities.LegalActivity"
            android:label="@string/title_activity_legal"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.EventListActivity" />
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="About" />
        <activity android:name=".activities.UserProfileActivity" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".activities.EventListActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".activities.WebViewActivity" />

        <!-- Service Declarations -->
        <service
            android:name=".services.MessagingService"
            android:enabled="true"
            android:exported="false" />
        <service android:name="org.eclipse.paho.android.service.MqttService" />
        <service
            android:name=".services.EventStartNotifierService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.FirebaseNotificationService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".services.FirebaseRegisterService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".services.AuthTokenRefreshService"
            android:exported="false" />
        <service
            android:name=".services.FCMRegistrationService"
            android:exported="false"/>

        <!-- Receiver Declarations -->
        <receiver
            android:name=".receivers.EventStartReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".receivers.NetworkChangeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Meta-Data Declarations -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="02dbff54ea76253b2702bf789ca6bce41ccd7d7b" />
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>